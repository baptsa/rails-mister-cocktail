<div class="media">
  <div class="media-body">
    <div class="media-section">
      <h2><%= @cocktail.name.capitalize %></h2>
    </div>
    <div class="media-section">
      <p><%= @cocktail.description %></p>

    </div>

  </div>
  <div class="media-aside">
    <div class="media-section">
      <h4>Add a dose</h4>
          <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.input :description %>
            <%= f.input :ingredient_id, collection: Ingredient.all, prompt: "Select Ingredient" %>
            <%= f.button :submit, label: "add a dose", class: "btn btn-primary" %>
          <% end %>
    </div>
    <div class="media-section">
      <h4>Doses</h4>
            <ul class="list-unstyled">
              <% @cocktail.doses.each do |dose| %>
              <li><%= dose.description %> - <%= dose.ingredient.name %>   <%= link_to image_tag("trash.png"), cocktail_dose_path(@cocktail, dose), method: :delete %></li>
              <% end %>






            </ul>
    </div>
  </div>
</div>
